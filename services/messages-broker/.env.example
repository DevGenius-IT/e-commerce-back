APP_NAME="Messages Broker Service"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8005

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=messages-broker-db
DB_PORT=3306
DB_DATABASE=messages_broker
DB_USERNAME=root
DB_PASSWORD=secret

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_CONNECTION_TIMEOUT=10
RABBITMQ_READ_WRITE_TIMEOUT=30
RABBITMQ_HEARTBEAT=15

# RabbitMQ Exchange Configuration
RABBITMQ_EXCHANGE_NAME=microservices
RABBITMQ_EXCHANGE_TYPE=topic
RABBITMQ_EXCHANGE_DURABLE=true
RABBITMQ_EXCHANGE_AUTO_DELETE=false

# RabbitMQ Dead Letter Configuration
RABBITMQ_DLX_ENABLED=true
RABBITMQ_DLX_EXCHANGE=microservices.dlx
RABBITMQ_DLX_QUEUE=dead_letter_queue
RABBITMQ_MAX_RETRIES=3

# RabbitMQ Queue Prefetch
RABBITMQ_PREFETCH_SIZE=0
RABBITMQ_PREFETCH_COUNT=1

# Microservices URLs
AUTH_SERVICE_URL=http://auth-service:8001
API_GATEWAY_URL=http://api-gateway:8000
ADDRESSES_SERVICE_URL=http://addresses-service:8002
BASKETS_SERVICE_URL=http://baskets-service:8003
PRODUCTS_SERVICE_URL=http://products-service:8004